import tkinter as tk
from matplotlib.backends.backend_tkagg import FigureCanvasTkAgg
from matplotlib.figure import Figure

x_data = []
y_data = []

# 그래프 그리기 함수
def plot_graph():
    try:
        x = float(x_entry.get())
        y = float(y_entry.get())
    except ValueError:
        print("숫자를 입력하세요!")
        return

    x_data.append(x)
    y_data.append(y)

    # 🔹 x값 기준으로 정렬해서 직선처럼 연결
    pairs = sorted(zip(x_data, y_data), key=lambda p: p[0])
    sorted_x, sorted_y = zip(*pairs)

    # 그래프 갱신
    ax.clear()
    ax.plot(sorted_x, sorted_y, marker='o', linestyle='-')
    ax.set_title("Dynamic Line Plot")
    ax.set_xlabel("X")
    ax.set_ylabel("Y")
    # 🔹 이게 핵심! 그래프를 tkinter에 다시 그리기
    canvas.draw()

# 윈도우 설정
root = tk.Tk()
root.title("Plot Graph")

# 입력 필드
x_label = tk.Label(root, text="Enter x coordinate:")
x_label.pack()
x_entry = tk.Entry(root)
x_entry.pack()

y_label = tk.Label(root, text="Enter y coordinate:")
y_label.pack()
y_entry = tk.Entry(root)
y_entry.pack()

plot_button = tk.Button(root, text="Plot", command=plot_graph)
plot_button.pack()

# matplotlib figure 생성
fig = Figure(figsize=(5, 4), dpi=100)
ax = fig.add_subplot(111)

# Tkinter에 matplotlib 그래프 붙이기
canvas = FigureCanvasTkAgg(fig, master=root)
canvas.get_tk_widget().pack()

root.mainloop()
