import tkinter as tk
import random
import time

def update_text_size(canvas, text_id):
    # 현재 폰트 크기를 랜덤으로 변경
    new_size = random.randint(10, 80)
    canvas.itemconfig(text_id, font=("Helvetica", new_size))

def update_text_color(canvas, text_id):
    # 텍스트 색상을 랜덤으로 변경
    colors = ["red", "orange", "yellow", "green", "blue", "purple", "pink"]
    new_color = random.choice(colors)
    canvas.itemconfig(text_id, fill=new_color)

def animate_text(canvas, text_id):
    # 텍스트 크기와 색상을 주기적으로 바꾸는 애니메이션
    for i in range(10):
        update_text_size(canvas, text_id)
        update_text_color(canvas, text_id)
        canvas.update()        
        time.sleep(0.5)        

# 초기 설정
root = tk.Tk()
root.title("Text Animation")

canvas = tk.Canvas(root, width=400, height=200)
canvas.pack()

# 텍스트 생성
text_id = canvas.create_text(200, 100, text="HELLO", fill="black", font=("Helvetica", 12))

# 애니메이션 시작
animate_text(canvas, text_id)

root.mainloop()
